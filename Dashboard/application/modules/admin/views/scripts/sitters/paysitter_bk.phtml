<script type="text/javascript">
    $(function(){
    $("input[type=checkbox]").change(function(){
    $("#w_n").hide();
    $("#w_n").html("");
    $("#c_n").hide();
    $("#c_n").html("");
    $("#job").hide();
    $("#job").html("");

    var sum=0;

    jQuery('input[name=job_id]:checked').map(function(){
    if ( this.checked ) {
    sum += parseInt($(this).attr('data'));} else {
    sum -= parseInt($(this).attr('data'));}});

    var ele = jQuery('input[name=job_id]:checked').map(function(){
    return this.value;}).get().join()

    $("#job_id").html(ele);       
    $("#amount").html(sum); 
    $("#j_ids").val(ele);       
    $("#amounts").val(sum);  }); 

    $( "input[type='radio']" ).change(function() {
    var select=($(this).val());
    if(select=='check'){
    $("#w_n").hide();
    $("#w_n").html("");
    $("#wire_number").hide();
    $("#check_number").show();
    }     
    if(select=='wire'){

    $("#c_n").hide();
    $("#c_n").html("");
    $("#wire_number").show();
    $("#check_number").hide();
    }});
    });
</script>

<script>

