    $("#userid").val(id);

    var sitter_id=$("#userid").val();
    var total_amount=$("#amounts").val();

    if(flag==true)
    {

    $.ajax({
    url:"<?php echo ADMIN_URL.'sitters/updatesitterpaymentstatus' ?>",
