function searchSitter(thisform){
	//alert(thisform);
	//alert($(thisform).serialize());
	$("#search_btn").hide();
	$("#search_loading").show();
	$.ajax({
		
		url:'<?php echo ADMIN_URL?>client/assign/user/<?php echo $this->userid?>/modify/<?php echo $this->job_id?>/search/sitter/',
		data:$(thisform).serialize(),
		type:'post',
